@page
@model ArtWebApp.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductID" />
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.AvailableQuantity" class="control-label"></label>
                <input asp-for="Product.AvailableQuantity" class="form-control" />
                <span asp-validation-for="Product.AvailableQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.WorkshopID" class="control-label"></label>
                <select asp-for="Product.WorkshopID" class="form-control" asp-items="ViewBag.WorkshopID"></select>
                <span asp-validation-for="Product.WorkshopID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.PaintingID" class="control-label"></label>
                <select asp-for="Product.PaintingID" class="form-control" asp-items="ViewBag.PaintingID"></select>
                <span asp-validation-for="Product.PaintingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
