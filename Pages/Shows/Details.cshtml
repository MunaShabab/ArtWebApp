@model ArtWebApp.Pages.Shows.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Show</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Show.ShowTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Show.ShowTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Show.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Show.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Show.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Show.EndDate)
        </dd>
         <dd>
            <P>Paintings in the <q> @Html.DisplayFor(model => model.Show.ShowTitle) </q>  show</P>
