                <tr>
                    <th>Painting Title</th>
                    
                </tr>

                @foreach (var item in Model.ShowPainting)
                {
                 <tr>
                    <td>
                        <q>@Html.DisplayFor(modelItem => item.PaintingID)</q>
                    </td>
                </tr>


                }
</table>
        </dd>
    </dl>
